@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Popis filmova";
}

<div class="row">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-xs-6 border-primary mb-3">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-white bg-info">
                                <p class="card-text">
                                    <h5 class="card-title">
                                        @item.Name
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    </h5>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <img src="@item.ImageUrl" width="100%" alt="@item.Name">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <p class="card-text">@item.Description</p>
                                <p class="card-text"><b>Kino: </b>@item.Cinema.Name</p>
                                <p class="card-text"><b>Kategorija: </b>@item.MovieCategory</p>
                                <p class="card-text"><b>Početak prikazivanja: </b>@item.StartDate.ToString("dd/MM/yy")</p>
                                <p class="card-text"><b>Kraj prikazivanja: </b>@item.EndDate.ToString("dd/MM/yy")</p>
                                <p class="card-text ">
                                    <b>Status: </b>
                                    @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                                    {
                                        <span class="badge bg-success text-white">Dostupno</span>
                                    }
                                    else if (DateTime.Now > item.EndDate)
                                    {
                                        <span class="badge bg-danger text-white">Ne igra više</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary text-white">U dolasku</span>
                                    }
                                </p>

                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer ">
                                <p class="card-text">
                                    <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="bi bi-eye-fill"></i> Detalji
                                    </a>
                                    <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@item.Id"><i class="bi bi-cart-plus"></i> Dodaj u košaricu (Cijena @item.Price.ToString("c"))</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
    
@await Html.PartialAsync("_CreateItem", "Movies") 