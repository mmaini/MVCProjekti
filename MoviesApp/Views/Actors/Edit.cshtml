@model Actor
@{
    ViewData["Title"] = "Ažuriranje glumca";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            Ažuriranje @Model.FullName
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>


                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePictureUrlPreview" />
                    </div>

                    <div class="form-group">
                        <label asp-for="ProfilePictureUrl" class="control-label"></label>
                        <input asp-for="ProfilePictureUrl" class="form-control" />
                        <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Ažuriraj" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Povratak na listu glumaca</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        //kako bi se kod reload-a učitala slika
        $(document).ready(function() {
            var output = document.getElementById('ProfilePictureUrlPreview');
            output.src = $("#ProfilePictureUrl").val();
        });

        //za inicijalno učitavanje kad unesemo url
        $("#ProfilePictureUrl").on("change",
            function() {
                var output = document.getElementById('ProfilePictureUrlPreview');
                output.src = $(this).val();
            });
    </script>
}