@*ovaj View koristimo i za dodavanje i za ažuriranje*@

@model Song
@{ 
    @*u Action unutar kontrolera postavljamo vrijednost ovisno o tome da li dodajemo ili ažuriramo*@
    ViewBag.Title = ViewBag.Action;
}

<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Naziv</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Year">Godina</label>
        <input asp-for="Year" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GenreId">Žanr</label>
        <select asp-for="GenreId" class="form-control">
            <option value="">Odaberi žanr</option>
            @foreach(var genre in ViewBag.Genres)
            {
                <option value="@genre.Id">@genre.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Ocjena</label>
        <input asp-for="Rating" class="form-control" />
    </div>

    @*Skriveno polje (Hidden field)*@
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Odustani</a>

</form>