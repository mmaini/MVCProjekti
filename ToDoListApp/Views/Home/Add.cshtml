@model ToDoViewModel

<h2>Nova obaveza</h2>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Home" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="CurrentTask.Description">Opis</label>
        <input asp-for="CurrentTask.Description" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CurrentTask.CategoryId">Kategorija</label>
        <select asp-for="CurrentTask.CategoryId" class="form-control"
                asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
            <option value=""></option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CurrentTask.DueDate">Datum</label>
        <input asp-for="CurrentTask.DueDate" type="text" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="CurrentTask.StatusId">Status</label>
        <select asp-for="CurrentTask.StatusId" class="form-control"
                asp-items="@(new SelectList(Model.Statuses, "Id", "Name"))">
            <option value=""></option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Otkaži</a>
</form>
