@model List<Category>
@{ 
    ViewBag.Title = "Upravljanje kategorijama";
}

<h1>@ViewBag.Title </h1>
<div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Naziv</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td><a asp-controller="Category" asp-action="Update" asp-route-id="@category.Id">Uredi</a></td>
                    <td><a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Obriši</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Category" asp-action="Add" class="btn btn-primary">Dodaj novu kategoriju</a>
</div>