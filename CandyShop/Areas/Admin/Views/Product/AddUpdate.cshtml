@model Product
@{
    string title = ViewBag.Action + " proizvod";
    ViewBag.Title = title;
}

<h1>@title</h1>

<form asp-controller="Product" asp-action="Update" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CategoryId">Kategorija</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name", Model.CategoryId.ToString()))" class="form-control">
        </select>

        <div class="form-group">
            <label asp-for="Code">Šifra</label>
            <input asp-for="Code" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Name">Naziv</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Price">Cijena</label>
            <input asp-for="Price" class="form-control" />
        </div>

        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
        <a asp-controller="Product" asp-action="List" class="btn btn-primary">Otkaži</a>
    </div>
</form>