@model Product
@{
    ViewBag.Title = "Detalji o proizvodu";
}

<h1>Detalji o proizvodu</h1>
<br />
<div class="row">
    <div class="col-sm-4">
        <img src="~/images/@ViewBag.ImageFileName" alt="@Model.Name" class="img-responsive center-block" /> 
    </div>

    <div class="col-sm-8">
        <h2>@Model.Name</h2>
        <h4>Kategorija: @ViewBag.CategoryName</h4>
        <table class="table table-bordered table-striped">
            <tr>
                <td>Cijena:</td>
                <td>@Model.Price.ToString("c")</td>
            </tr>

            <tr>
                <td>Popust:</td>
                <td>@Model.DiscountPercent.ToString("P0")</td>
            </tr>

            <tr>
                <td>Cijena s popustom:</td>
                <td>@Model.DiscoutPrice.ToString("c")</td>
                (Uštedjeli ste @Model.DiscountAmount.ToString("c"))
            </tr>

        </table>
    </div>
</div>


<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a>
